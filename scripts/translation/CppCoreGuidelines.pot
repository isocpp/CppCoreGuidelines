msgstr""

# CppCoreGuidelines.md:12656
msgid "12656            getline(cin, s);        // fine"
msgstr""

# CppCoreGuidelines.md:12657
msgid "12657            if (s == \"surprise\") {  // fine"
msgstr""

# CppCoreGuidelines.md:12658
msgid "12658                // ..."
msgstr""

# CppCoreGuidelines.md:12659
msgid "12659            }"
msgstr""

# CppCoreGuidelines.md:12660
msgid "12660        }"
msgstr""

       
