msgid "8740            a[n - 1] = 9;   // bad (twice)"
msgstr""

       
# CppCoreGuidelines.md:8741
msgid "8741    ##### Exception"
msgstr""

       
# CppCoreGuidelines.md:8742
msgid "8742    Use unsigned types if you really want modulo arithmetic."
