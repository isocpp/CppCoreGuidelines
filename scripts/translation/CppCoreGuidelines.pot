msgid "12651        using namespace std;"
msgstr""

       
# CppCoreGuidelines.md:12652
msgid "12652        void use()"
msgstr""

# CppCoreGuidelines.md:12653
msgid "12653        {"
msgstr""

# CppCoreGuidelines.md:12654
msgid "12654            string s;"
msgstr""

